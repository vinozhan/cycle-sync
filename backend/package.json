{
  "name": "cyclesync-backend",
  "version": "1.0.0",
  "description": "CycleSync - RESTful API for promoting cycling with safe routes and rewards",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:perf": "artillery run tests/performance/load-test.yml --output tests/performance/report.json",
    "test:perf:report": "artillery report tests/performance/report.json",
    "test:stress": "artillery run tests/performance/stress-test.yml"
  },
  "keywords": [
    "cycling",
    "sdg11",
    "mern",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.4",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.6",
    "morgan": "^1.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "artillery": "^2.0.30",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
